---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="social-links">
            
            <a class="linkedin" href="https://www.linkedin.com/in/harkirat-chadha/" target="_blank" rel="noopener noreferrer">
                <span class="sr-only">Follow Harkirat on LinkedIn</span>
                <svg viewBox="0 0 24 24" aria-hidden="true" width="24" height="24" fill="currentColor">
                    <path d="M4.98 3.5C4.98 4.88 3.88 6 2.5 6S0 4.88 0 3.5 1.12 1 2.5 1 4.98 2.12 4.98 3.5zM0 8h5V24H0zM8 8h4.8v2.16h.07c.67-1.27 2.3-2.61 4.74-2.61 5.07 0 6 3.34 6 7.68V24h-5V15.5c0-2.02 0-4.6-2.8-4.6-2.8 0-3.23 2.19-3.23 4.45V24H8V8z"></path>
                </svg>
            </a>

            <a href="https://github.com/hchadha28" target="_blank">
                <span class="sr-only">Go to Astro's GitHub repo</span>
                <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32">
                    <path fill="currentColor"
                        d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"></path>
                </svg>
            </a>
        </div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		
    /* --- CHANGED TO "T3" COLORS --- */
		background: var(--primary-bg); /* Was: white */
		border-bottom: 1px solid var(--secondary-bg); /* Was: box-shadow */
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		
		color: rgb(var(--black));
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;

		border-bottom-color: var(--accent);
	}
	.social-links {
       display: flex;
        align-items: center; 
        gap: 0.5rem; 
    }
    .social-links a {
        display: flex;
        align-items: center; /* center svg inside each anchor */
    }

    /* GitHub at 32px, shrink LinkedIn slightly */
    .social-links svg {
        display: block;
        line-height: 0; /* remove descender whitespace */
    }
    .social-links a.linkedin svg {
        width: 24px;
        height: 24px;
    }
    .social-links a:not(.linkedin) svg {
        width: 32px;
        height: 32px;
    }
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>